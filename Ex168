/* 정수 배열이 있을 때 숫자들 중 7의 개수 반환하기 */
class Solution {
    public int solution(int[] array) {
        int answer = 0;
        String str = "";
        for (int i = 0; i < array.length; i++) {
            str += array[i];
        }
        for (int i = 0; i < str.length(); i++) {
            if (str.charAt(i) == '7') {
                answer++;
            }
        }
        return answer;
    }
}
