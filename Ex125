/* 정수 a, b가 주어졌을 때, 두 수를 포함하여 그 사이의 수를 모두 더한 값 구하기 */
class Solution {
    public long solution(int a, int b) {
        long answer = 0;
        if (a < b) {
            for (int i = a; i <= b; i++) {
                answer += i;
            }
        } else {
            for (int i = b; i <= a; i++) {
                answer += i;
            }
        }
        return answer;
    }
}
